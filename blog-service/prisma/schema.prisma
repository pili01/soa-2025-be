generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  content   String
  createdAt DateTime @default(now()) @map("created_at")

  likes    BlogLike[]
  comments BlogComment[]

  @@index([userId])
  @@map("blogs")
}

model BlogLike {
  userId    Int
  blogId    Int
  createdAt DateTime @default(now()) @map("created_at")

  blog Blog @relation(fields: [blogId], references: [id], onDelete: Cascade)

  @@id([userId, blogId])
  @@index([blogId])
  @@index([createdAt])
  @@map("blog_likes")
}

model BlogComment {
  id             Int      @id @default(autoincrement())
  blogId         Int
  userId         Int
  authorUsername String   @map("author_username")
  content        String
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  blog           Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)

  @@index([blogId])
  @@index([userId])
  @@map("blog_comments")
}
