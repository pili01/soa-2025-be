generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now()) @map("created_at")

  likes BlogLike[]

  @@map("blogs")
}

model BlogLike {

  userId    Int
  blogId    Int
  createdAt DateTime @default(now()) @map("created_at")

  blog Blog @relation(fields: [blogId], references: [id], onDelete: Cascade)

  @@id([userId, blogId])

  @@index([blogId])
  @@index([createdAt])
  @@map("blog_likes")
}